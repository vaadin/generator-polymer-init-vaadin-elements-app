
{
  "root": ".",
  "entrypoint": "index.html",
  "shell": "src/<%= elementName %>.js",
  "fragments": [
    "src/404.js",
    "src/employee-list.js",
    "src/employee-new.js"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "package.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/**",
    "!node_modules/@webcomponents/webcomponentsjs/gulpfile.js",
    "node_modules/mock-http-request/**",
    "employees.json"
  ],
  "builds": [
    {
      "bundle": true,
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "js": {
        "minify": false,
        "compile": false,
        "transformModulesToAmd": false
      }
    }
  ],
  "moduleResolution": "node",
  "npm": true
}
