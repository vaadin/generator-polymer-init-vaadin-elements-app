
{
  "root": ".",
  "entrypoint": "index.html",
  "shell": "src/<%= elementName %>.html",
  "fragments": [],
  "sources": [
    "src/**/*",
    "images/**/*",
    "package.json"
  ],
  "extraDependencies": [
    "node_modules/@webcomponents/webcomponentsjs/**",
    "node_modules/mock-http-request/**"
  ],
  "builds": [
    {
      "bundle": true,
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "js": {
        "minify": false,
        "compile": false,
        "transformModulesToAmd": false
      }
    }
  ],
  "moduleResolution": "node",
  "npm": true
}
